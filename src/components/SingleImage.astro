---
import { createBaseurl } from "../lib/baseurl.ts";

interface Image {
	image: string;
	alt: string;
	caption: string;
}
interface Props {
	image: Image;
}
const { image } = Astro.props;
---

<div class="flex flex-col">
	{
		(
			<div class="mx-auto my-4 max-w-[60%]">
				<figure class="object-contain">
					<img
						class="rounded-lg hover:saturate-50"
						src={createBaseurl(image.image.slice(1))}
						alt={image.alt}
					/>
					<figcaption class="pr-1 text-center text-sm text-gray-500">{image.caption}</figcaption>
				</figure>
			</div>
		)
	}
</div>
