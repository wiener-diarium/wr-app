---
import { Image } from "astro:assets";

import { getImageImport } from "../lib/get-image-imports";

interface Props {
	image?: string | null;
}

const { image } = Astro.props;
---

<div class="my-2 border-t-[5px] border-brand bg-white">
	{
		image != null ? (
			<Image
				alt=""
				class="size-full h-60 w-full object-cover"
				fetchpriority="high"
				loading="eager"
				src={getImageImport(image)}
			/>
		) : null
	}
	<div class="grid gap-y-4 px-8 pb-12 pt-6">
		<slot />
	</div>
</div>
