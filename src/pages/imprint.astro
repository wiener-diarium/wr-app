---
import PageCard from "../components/PageCard.astro";
import PageSection from "../components/PageSection.astro";
import Page from "../layouts/Page.astro";
import PageContent from "../layouts/PageContent.astro";
import { baseurl } from "../lib/baseurl.ts";

async function impressum() {
	const response = await fetch("https://imprint.acdh.oeaw.ac.at/22895/?locale=de&format=html");
	const impressum = response.body;
	return impressum;
}
const imprint = impressum();
---

<Page title="Imprint" baseurl={baseurl}>
	<PageContent classNames={["container", "mx-auto", "mb-auto", "max-w-7xl"]}>
		<PageSection>
			<h1 class="border-b border-[#00000026] text-xl font-medium">
				<span class="-my-px inline-flex border-b border-[#212529] pb-4 text-[#212529]">
					Imprint
				</span>
			</h1>
			<PageCard>
				<div set:html={imprint} />
			</PageCard>
		</PageSection>
	</PageContent>
</Page>
<style is:global>
	h2 {
		padding: 0.5rem 0;
		font-size: 1.5rem !important;
	}

	h3 {
		padding: 0.5rem 0;
		font-size: 1.2rem;
	}

	p {
		padding: 0.5rem 0;
		font-size: 1rem;
	}
</style>
