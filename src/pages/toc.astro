---
import EditionTable from "../components/EditionTable.astro";
import PageCard from "../components/PageCard.astro";
import PageSection from "../components/PageSection.astro";
import Page from "../layouts/Page.astro";
import PageContent from "../layouts/PageContent.astro";
import { baseurl } from "../lib/baseurl.ts";
---

<Page title="Inhaltsverzeichnis" baseurl={baseurl}>
	<PageContent classNames={["container", "mx-auto", "mb-auto", "max-w-7xl"]}>
		<div class="flex flex-col">
			<PageSection>
				<h2 class="border-b border-[#00000026] text-xl font-medium">
					<span class="-my-px inline-flex border-b border-[#212529] text-[#212529]">
						Inhaltsverzeichnis
					</span>
				</h2>
				<PageCard>
					<EditionTable baseurl={baseurl} />
				</PageCard>
			</PageSection>
		</div>
	</PageContent>
</Page>
